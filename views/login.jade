html
  head
    meta(charset='utf8')
    base(href='/')
    title Our Special Kids
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel='stylesheet', href='/css/app.css')
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/bootstrap-responsive.min.css')

body
  div(class='container')
    h1 Welcome to Care Kids!
  
    form(action='/login', method='post')
      legend Login    
      input(type='text', placeholder='Your email', name='email')
      br
      input(type='password', placeholder='Your password', name='password')
      br
      //button(type='button', ng-click='login()', class='btn btn-primary') Login
      input(type='submit', value='login', class='btn btn-primary')
      
      
    form(action='/api/users', method='post')
      legend Register
      input(type='text', placeholder='Enter your email', name='email')
      br
      input(type='password', placeholder='Enter a password', name='password')
      br
      //button(type='button', ng-click='register()', class='btn btn-primary') Register
      input(type='submit', value='Register', class='btn btn-primary')  
  
