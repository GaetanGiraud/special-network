div#menubar(ng-cloak, class="ng-cloak")
  div.container
    ul.pull-left
      li
        a(href="/home")
          i.icon-home.icon
          | Home
      li
        div.search(question-search search = 'search(term)', ng-animate="{enter: 'enter-animation', leave: 'leave-animation', move: 'move-animation', show: 'show-animation', hide: 'hide-animation'}")
      
          // include includes/sidebar/children
      //include includes/sidebar/questions
    ul.pull-right
      li
        div(popup-menu = 'children', ng-animate="{enter: 'enter-animation', leave: 'leave-animation', move: 'move-animation', show: 'show-animation', hide: 'hide-animation'}")
          | The Children
          
      li
        div(popup-menu = 'topics', ng-animate="{enter: 'enter-animation', leave: 'leave-animation', move: 'move-animation', show: 'show-animation', hide: 'hide-animation'}")
         | My Topics

      li
        a(href="/user")
          img(ng-src = "{{ currentUser | userIconPic }}") 
          | {{currentUser.name}} 
      li(ng-class = "{'mail': unreadMessageCount > 0}")
        a(href="/messages")
          span(ng-show = "unreadMessageCount > 0", class = "count badge badge-important") {{ unreadMessageCount }}
          i.icon-envelope
           
      li 
        a(href="/logout")
          i.icon-signout

      
