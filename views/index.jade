extends layout

block body
  div(class='container',ng-controller='AppCtrl')
    include includes/header
    
    div(class='wrapper row')
      div(id="partial", class="span10", ng-view)
      div(id='sidebar', ng-show = "loggedIn", class='span2')
        include includes/menu  

    include includes/footer
  
  // loading external libraries
  script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js')
  script(src='http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.1/jquery-ui.min.js')
  script(src="http://maps.googleapis.com/maps/api/js?key=AIzaSyDksAsTFgEvILZgCSUXLTGGfQf2zWdeAx0&sensor=false")
  script(src='js/lib/jquery.fileupload.js') 
  script(src="js/lib/jquery.iframe-transport.js")
  
  // loading angular core library
  script(src='js/lib/angular/angular.js')
  
  // loading angular external modules
  script(src='js/lib/angular-b/ui-bootstrap-0.2.0.min.js')
  script(src='js/lib/angular-ui/angular-ui.min.js')
  script(src='js/lib/angular/angular-resource.min.js')
  
  // loading the app
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
  script(src='js/auth-service.js')


