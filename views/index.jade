extends layout

block body
  div(class='container',ng-controller='AppCtrl')
    header(ng-show = "authenticated")
      h2 Hello
      ul.menu
        li 
          a(ng-href='/logout') logout    
        li
          a(ng-href='/login') login


    div(class = 'alert {{msg.type}}', ng-show = "msg")
      button(type="button", ng-click = "msg = ''" )
      p
        |{{msg.content}}

    div(ng-view)

    div
      | Angular seed app: v
      span(app-version)
  
  script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js')
  script(src='http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.1/jquery-ui.min.js')
  script(src='js/lib/angular/angular.js')
  script(src='js/lib/angular-b/ui-bootstrap-0.2.0.min.js')
  script(src='js/lib/angular-ui/angular-ui.min.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
  script(src='js/lib/angular/angular-resource.min.js')

